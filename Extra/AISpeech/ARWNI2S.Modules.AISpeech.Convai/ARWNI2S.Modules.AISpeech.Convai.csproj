<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Company>Dragon Corp Games, S.L.</Company>
    <PackageProjectUrl>https://arwni2s.dragoncorp.org/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ARWNI2S/Narrative-Simulator</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <OutputPath>..\..\..\Bin\Modules\$(MSBuildProjectName)</OutputPath>
    <OutDir>$(OutputPath)</OutDir>
    <!--Set this parameter to true to get the dlls copied from the NuGet cache to the output of your project. 
    You need to set this parameter to true if your module has a nuget package 
    to ensure that the dlls copied from the NuGet cache to the output of your project-->
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <LangVersion>12.0</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkAssembliesTasks Include="$(MSBuildProjectDirectory)\..\..\..\Tools\FrameworkAssembliesTasks\FrameworkAssembliesTasks.proj" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\NI2S-Node\src\Infrastructure\ARWNI2S.Infrastructure\ARWNI2S.Infrastructure.csproj" />
    <ProjectReference Include="..\..\..\NI2SSdk\ARWNI2S.Sdk\ARWNI2S.Sdk.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="module.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="logo.jpg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <!-- This target execute after "Build" target -->
  <Target Name="NI2SModulesTarget" AfterTargets="Build">
    <!-- Delete unnecessary libraries from modules path -->
    <MSBuild Projects="@(FrameworkAssembliesTasks)" Properties="ModulePath=$(MSBuildProjectDirectory)\$(OutDir)" Targets="NI2SModulesClear" />
  </Target>

</Project>
